# update defaults
sketchybar --default                                                \
                     background.color=0xEB1e1e2e                    \
                     blur_radius=2                                  \
                     background.corner_radius=15                    \
                     background.height=30                           \
                     icon.padding_left=12                           \
                     icon.padding_right=4                           \
                     label.padding_left=4                           \
                     label.padding_right=12                         \
                     background.padding_left=4                     \
                     background.border_width=1


# ~~ center items ~~

# app title
sketchybar --add item title left                                    \
           --set      title label.padding_left=12                   \
                            label="App"                             \
                            background.padding_left=0               \
                            icon.padding_left=0                     \
                            icon.padding_right=0                    \
                            background.border_color=$COLOR_1        \
                            label.max_chars=54                      \
                            script="./scripts/title.sh"             \
          --subscribe title front_app_switched
                            # scroll_texts=on                         \
                            # label.scroll_duration=200

# ~~ right items ~~

# time

sketchybar --add item datetime.time right                                    \
           --set      datetime.time background.padding_left=0 \
                          background.color=0x00000000 \
                          label.padding_left=0 \
                          label="$(date +'%I:%M')"              \
                          script='./scripts/time.sh'               \
                          update_freq=1

sketchybar --add item datetime.date right                                    \
           --set      datetime.date icon=􀐫                                   \
                      icon.color=$COLOR_5 \
                      background.color=0x00000000 \
                      background.padding_left=0 \
                      background.padding_right=-4 \
                      label.padding_right=0 \
                           label="$(date +'%a %d')"              \
                           script='./scripts/date.sh'               \
                           update_freq=60

sketchybar --add bracket datetime datetime.date datetime.time \
           --set datetime background.border_color=$COLOR_5

# wifi
sketchybar --add item wifi right \
           --set      wifi icon=􀙇  \
                           icon.color=$COLOR_4 \
                           background.border_color=$COLOR_4 \
                           script='./scripts/wifi.sh' \
                           --subscribe wifi wifi_change
# weather
sketchybar --add item weather right                                 \
           --set      weather icon=􀇛                                \
                              icon.color=$COLOR_4                    \
                              background.border_color=$COLOR_4       \
                              background.padding_right=4 \
                              label="--°C"                          \
                              script='./scripts/weather.sh'         \
                              update_freq=$(( 5 * 60 ))

# battery
sketchybar --add item battery right                                 \
           --set      battery icon=                                \
                              icon.color=$COLOR_2                   \
                              background.border_color=$COLOR_2       \
                              label="--%"                           \
                              script='./scripts/battery.sh'         \
                              update_freq=20


sketchybar --add item title_proxy right                             \
           --set      title_proxy y_offset=100                      \
                                  label="Title"


# finish config
sketchybar --hotload on
sketchybar --update
