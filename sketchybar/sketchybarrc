BLUE=0xFF1E6E77
ORANGE=0xFFCC7B6E
PINK=0xFFD7448A
RED=0xFFCE3A5B
GREEN=0xFF638989

COLOR_1=0xFFFFB703
COLOR_2=0xFFFB8500
COLOR_3=0xFF023047
COLOR_4=0xFF219EBC
COLOR_5=0xFF8ECAE6
# main bar & defaults
sketchybar --bar height=36        \
                 margin=0        \
                 y_offset=0       \
                 padding_left=8   \
                 padding_right=8  \
                 color=0x30000000

sketchybar --default updates=when_shown                             \
                     icon.font="SF Pro:Semibold:12.0"  \
                     icon.color=0xFFFFFFFF                          \
                     label.font="Monaco:Regular:12.0" \
                     background.color=0x00000000                    \
                     y_offset=0

